<UserControl x:Class="DatosLibros.Views.UCEliminarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatosLibros.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
    <StackPanel Margin="20">
        <TextBlock>Esta seguro de querer eliminar este elemento?</TextBlock>
        <TextBlock Margin="0,10,0,0">Titulo:</TextBlock>
        <TextBox IsEnabled="False" Text="{Binding Libro.Titulo}"></TextBox>
        <Button Command="{Binding EliminarCommand}">Eliminar</Button>
        <Button Command="{Binding CancelarCommand}">Cancelar</Button>
    </StackPanel>
    
</UserControl>
